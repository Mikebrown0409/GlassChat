# GlassChat Environment Variables
# Copy this file to .env and fill in your actual values

# Database
# For local development, you can use SQLite (file-based)
DATABASE_URL="file:./dev.db"

# NextAuth.js Configuration
# Generate a random secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# Authentication Providers (Optional)
# Get these from Discord Developer Portal: https://discord.com/developers/applications
AUTH_DISCORD_ID="your-discord-client-id"
AUTH_DISCORD_SECRET="your-discord-client-secret"

# AI API Keys
# OpenAI API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-your-openai-api-key-here"

# Anthropic API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY="your-anthropic-api-key-here"

# Google Generative AI API key from: https://aistudio.google.com/app/apikey
GOOGLE_GENERATIVE_AI_API_KEY="your-google-api-key-here"

# Upstash Redis (Optional - will use local mock if not provided)
# Get these from: https://console.upstash.com/
UPSTASH_REDIS_REST_URL="https://your-redis-url.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-redis-token-here"

# Development Settings
NODE_ENV="development"

# Optional: Skip environment validation during build
# SKIP_ENV_VALIDATION="true" 